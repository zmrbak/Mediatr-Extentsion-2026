<ui:DialogWindow
    x:Class="Mediatr_Extentsion_2026.Views.MediatrMessageSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
    Title="MediatR Message Creation"
    Width="611"
    Height="416"
    Background="White"
    ResizeMode="NoResize"
    TextOptions.TextFormattingMode="Display"
    mc:Ignorable="d">
    <ui:DialogWindow.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="100" />
        </Style>

        <Style x:Key="BaseInputControlStyle">
            <Setter Property="FrameworkElement.Margin" Value="5" />
            <Setter Property="FrameworkElement.Width" Value="150" />
            <Setter Property="FrameworkElement.Height" Value="25" />
        </Style>
        <Style x:Key="ImageStyle" TargetType="Image">
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />
        </Style>
        <Thickness
            x:Key="GridMargin"
            Bottom="3"
            Left="5"
            Right="5"
            Top="3" />
    </ui:DialogWindow.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <GroupBox Header="参数设置">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Class Name:" />
                        <TextBox Style="{StaticResource BaseInputControlStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Message Type:" />
                        <ComboBox Style="{StaticResource BaseInputControlStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Async/Sync:" />
                        <ComboBox Style="{StaticResource BaseInputControlStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Suffix:" />
                        <ComboBox Style="{StaticResource BaseInputControlStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Response Type:" />
                        <ComboBox Style="{StaticResource BaseInputControlStyle}" />
                    </StackPanel>
                    <GroupBox Header="Addtional options">
                        <StackPanel>
                            <CheckBox Content="Create folder" />
                            <CheckBox Content="Create validator" />
                            <CheckBox Content="Create automapper profile" />
                            <CheckBox Content="Message and Handler in one file" />
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Files Preview">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Mediatr Extentsion 2026;component/Assets/Folder_16x.png" Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="内容设置">
                <StackPanel>
                    <GroupBox Header="Add Imports">
                        <TextBox Width="300" Height="100" />
                    </GroupBox>
                    <GroupBox Header="Add constructor paramaters">
                        <TextBox Width="300" Height="100" />
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </DockPanel>
    </DockPanel>
</ui:DialogWindow>
