<ui:DialogWindow
    x:Class="Mediatr_Extentsion_2026.Views.MediatrMessageSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
    Title="MediatR Message Creation"
    Width="611"
    Height="479"
    Background="White"
    ResizeMode="NoResize"
    TextOptions.TextFormattingMode="Display"
    mc:Ignorable="d">
    <ui:DialogWindow.Resources>
        <Style x:Key="TextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Width" Value="100" />
        </Style>

        <Style x:Key="BaseInputControlStyle">
            <Setter Property="FrameworkElement.Margin" Value="5" />
            <Setter Property="FrameworkElement.Width" Value="150" />
            <Setter Property="FrameworkElement.Height" Value="25" />
        </Style>
        <Style x:Key="ImageStyle" TargetType="Image">
            <Setter Property="Width" Value="15" />
            <Setter Property="Height" Value="15" />
        </Style>
        <Thickness
            x:Key="GridMargin"
            Bottom="3"
            Left="5"
            Right="5"
            Top="3" />
    </ui:DialogWindow.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <GroupBox Header="参数设置">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Class Name:" />
                        <TextBox Style="{StaticResource BaseInputControlStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Message Type:" />
                        <ComboBox
                            ItemsSource="{Binding MessageTypes}"
                            SelectedItem="{Binding SelectedMessageType}"
                            Style="{StaticResource BaseInputControlStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Async/Sync:" />
                        <ComboBox
                            ItemsSource="{Binding ProcessingTypes}"
                            SelectedItem="{Binding SelectedProcessingType}"
                            Style="{StaticResource BaseInputControlStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Suffix:" />
                        <ComboBox
                            ItemsSource="{Binding SuffixTypes}"
                            SelectedItem="{Binding SelectedSuffixType}"
                            Style="{StaticResource BaseInputControlStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource TextBlockStyle}" Text="Response Type:" />
                        <ComboBox
                            IsEnabled="{Binding IsResponseTypeComboBoxEnabled}"
                            ItemsSource="{Binding ResponseTypes}"
                            SelectedItem="{Binding SelectedResponseType, Mode=TwoWay}"
                            Style="{StaticResource BaseInputControlStyle}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <GroupBox Header="Addtional options">
                        <StackPanel>
                            <CheckBox Content="Create folder" IsChecked="{Binding ShouldCreateFolder, Mode=TwoWay}" />
                            <CheckBox Content="Create validator" IsChecked="{Binding ShouldCreateValidationFile, Mode=TwoWay}" />
                            <CheckBox Content="Create automapper profile" IsChecked="{Binding ShouldCreateAutomapperFile, Mode=TwoWay}" />
                            <CheckBox Content="Message and Handler in one file" IsChecked="{Binding OneFileStyle, Mode=TwoWay}" />
                            <CheckBox
                                Margin="20,0,0,0"
                                Content="Message and handler in one class"
                                IsChecked="{Binding OneClassStyle, Mode=TwoWay}"
                                IsEnabled="{Binding OneFileStyle}" />
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Files Preview">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Mediatr Extentsion 2026;component/Assets/Folder_16x.png" Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Image
                                    Margin="10,0,0,0"
                                    Source="/Mediatr Extentsion 2026;component/Assets/CSharp.png"
                                    Style="{StaticResource ImageStyle}" />
                                <TextBlock Text="folder Name" TextAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                        <Button
                            Width="85"
                            Height="25"
                            Margin="10"
                            Click="Ok_Click"
                            Content="Ok"
                            IsDefault="True"
                            IsEnabled="{Binding IsFormValid}" />
                        <Button
                            Width="85"
                            Height="25"
                            Margin="10"
                            Click="Cancel_Click"
                            Content="Cancel"
                            IsCancel="True" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="内容设置">
                <StackPanel>
                    <GroupBox Header="Add Imports">
                        <TextBox
                            Width="300"
                            Height="100"
                            Text="{Binding UsingItems}" />
                    </GroupBox>
                    <GroupBox Header="Add constructor paramaters">
                        <TextBox
                            Width="300"
                            Height="100"
                            Text="{Binding ConstructorItems}" />
                    </GroupBox>
                </StackPanel>
            </GroupBox>
        </DockPanel>
    </DockPanel>
</ui:DialogWindow>
